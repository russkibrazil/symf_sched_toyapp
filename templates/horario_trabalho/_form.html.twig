{% if path_cancelar is not defined %}
    {% set path_cancelar = path('horario_trabalho_index', {'cnpj': cnpj }) %}
{% endif %}

{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.diaSemana) }}
        {{ form_widget(form.diaSemana, {'attr': {'class': 'form-control'}}) }}
        <small class="form-text text-muted">{{ form_help(form.diaSemana) }}</small>
        <div class="invalid-feedback">
            {{ form_errors(form.diaSemana) }}
        </div>
    </div>

    <div class="form-row">

        <div class="form-group col mr-3 mb-3">
            {{ form_label(form.horaInicio) }}
            {{ form_widget(form.horaInicio, {'attr': {'class': 'form-control'}}) }}
            <small class="form-text text-muted">{{ form_help(form.horaInicio) }}</small>
            <div class="invalid-feedback">
                {{ form_errors(form.horaInicio) }}
            </div>
        </div>

        <div class="form-group col mr-3 mb-3">
            {{ form_label(form.horaFim) }}
            {{ form_widget(form.horaFim, {'attr': {'class': 'form-control'}}) }}
            <small class="form-text text-muted">{{ form_help(form.horaFim) }}</small>
            <div class="invalid-feedback">
                {{ form_errors(form.horaFim) }}
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col">
            <button class="btn btn-success" type="submit">{{ button_label|default('Salvar') }}</button>
        </div>
        <div class="col">
            <a class="btn btn-secondary" href="{{ path_cancelar }}">Cancelar</a>
        </div>
        {% if include_delete is defined and include_delete == true %}
            <div class="col">
                {{ include('horario_trabalho/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>
{{ form_end(form) }}
