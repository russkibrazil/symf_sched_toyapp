{% macro maskCpf(cpf) %}
    {% if cpf|length == 11 %}
        {{ "#{cpf|slice(0, 3)}.#{cpf|slice(3, 3)}.#{cpf|slice(6, 3)}-#{cpf|slice(9, 2)}" }}
    {% else %}
        {{ "0#{cpf|slice(0, 2)}.#{cpf|slice(2, 3)}.#{cpf|slice(5, 3)}-#{cpf|slice(8, 2)}" }}
    {% endif %}
{% endmacro %}

{% macro inputMaskCpf() %}'mask': '999.999.999-99'{% endmacro %}

{% macro maskCnpj(cnpj) %}
    {% if cnpj|length == 14 %}
        {{ "#{cnpj|slice(0, 2)}.#{cnpj|slice(2, 3)}.#{cnpj|slice(5, 3)}/#{cnpj|slice(8, 4)}-#{cnpj|slice(12, 2)}" }}
    {% else %}
        {{ cnpj }}
    {% endif %}
{% endmacro %}

{% macro inputMaskCnpj() %}'mask': '99.999.999/9999-99'{% endmacro %}