{% if path_cancelar is not defined %}
    {% set path_cancelar = path('funcionario_show', {'nomeUsuario': local_trabalho.cpfFuncionario.nomeUsuario}) %}
{% endif %}


{{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_widget(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-success">{{ button_label|default('Salvar') }}</button>
        </div>
        <div class="col">
            <a class="btn btn-secondary" href="{{ path_cancelar }}">Cancelar</a>
        </div>
        {% if include_delete is defined and include_delete == true %}
            <div class="col">
                {{ include('local_trabalho/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>
{{ form_end(form) }}
