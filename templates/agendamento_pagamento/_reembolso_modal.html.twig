<div id="reembolso-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reembolso-modal-title">Reembolso ao cliente</h5>
                <button class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="valor-reembolso-input">Valor a reembolsar</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="my-addon">R$</span>
                            </div>
                            <input id="valor-reembolso-input" class="form-control" type="number" name="valor_reembolso" min="0.01" required>
                        </div>
                        <div class="invalid-feedback"></div>
                    </div>
                    <input id="token_reembolso" type="hidden" name="_token" value="{{ csrf_token('refund' ~ agendamento.id|default('modal')) }}">
                    <input type="hidden" name="id" value="{{ agendamento.id|default('__id__') }}">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancel-reembolso-btn" data-dismiss="modal">Cancelar</button>
                <button
                    type="button"
                    class="btn btn-success"
                    id="submit-reembolso-btn"
                    data-path="{{ path('agendamento_pagamento_reembolso_ajax', {'id_agendamento': agendamento.id|default('__id__') }) }}"
                >Reembolsar</button>
            </div>
        </div>
    </div>
</div>
