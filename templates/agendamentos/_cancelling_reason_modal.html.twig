<div id="cancel-reason" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="cancel-reason-modal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancel-reason-modal">Justifique o cancelamento</h5>
                <button class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label for="quick-reason-select">Razão do cancelamento</label>
                    <select id="quick-reason-select" class="form-control" name="">
                        {% for row in reasonsArray %}
                            <option>{{ row }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label for="reason-txtar">Descrição (opcional)</label>
                    <textarea id="reason-txtar" class="form-control" rows="3"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Voltar</button>
                <button type="button" class="btn btn-danger">Cancelar</button>
            </div>
        </div>
    </div>
</div>
